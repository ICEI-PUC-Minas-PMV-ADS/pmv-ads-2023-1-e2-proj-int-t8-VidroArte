
@model VidroArte.Pages.Shared._LayoutModel
@{
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/menu.css" />
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20,100,1,-25" />


</head>
<body>

    <nav class="menulateral">
        <div>

            <div class="titulo" align="center">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="home" align="center"><img src="~/img/logo2.png" width="150"></a>
           
                    
                    <p align="center">
                    <h5>
                        @Model.bemvindomensagem
                    <br />
                    @if (Model.completarcadastro.Length > 0)
                    {
                        @Model.completarcadastro
                   }
                    </h5>

                        <form method="post"><button type="submit" name="logout" value="Logout">logout</button></form>
                    </p>
                </div>
        </div>
        <ul>
            <li onclick="mostraSub('menuinserir')">
                <a href="#">Inserir<span class="material-symbols-outlined">chevron_right</span></a>
                <ul class="itensinserir" id="menuinserir">
                    <li><a class="nav-link text-dark" asp-area="" asp-page="/inserir_pedido"><span class="material-symbols-outlined">add_shopping_cart</span>Pedido</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-page="/inserir_orcamento"><span class="material-symbols-outlined">add_shopping_cart</span>Orçamento</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-page="/inserir_cliente"><span class="material-symbols-outlined">person_add</span>Cliente</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-page="/inserir_fornecedor"><span class="material-symbols-outlined">local_shipping</span>Fornecedor</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-page="/inserir_funcionario"><span class="material-symbols-outlined">group_add</span>Funcionario</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-page="/inserir_materiais"><span class="material-symbols-outlined">forklift</span>Materiais</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-page="/inserir_servico"><span class="material-symbols-outlined">add_business</span>Serviços</a></li>
                </ul>
            </li>
            <li onclick="mostraSub('menuconsulta')">
                <a href="#" class="menuconsulta">Consulta<span class="material-symbols-outlined seta2">chevron_right</span></a>
                <ul class="itensconsulta" id="menuconsulta">
                    <li><a class="nav-link text-dark" asp-area="" asp-page="/consultar_pedido"><span class="material-symbols-outlined">add_shopping_cart</span>Pedido</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-page="/consultar_orçamento"><span class="material-symbols-outlined">add_shopping_cart</span>Orçamento</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-page="/consultar_cliente"><span class="material-symbols-outlined">person_add</span>Cliente</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-page="/consultar_fornecedor"><span class="material-symbols-outlined">local_shipping</span>Fornecedor</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-page="/consultar_funcionario"><span class="material-symbols-outlined">group_add</span>Funcionario</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-page="/consultar_materiais"><span class="material-symbols-outlined">forklift</span>Materiais</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-page="/consultar_servico"><span class="material-symbols-outlined">add_business</span>Serviços</a></li>
                </ul>
            </li>
            <li onclick="mostraSub('menurelatorios')">
                <a href="#" class="menurelatorios">Relatorios<span class="material-symbols-outlined seta2">chevron_right</span></a>
                <ul class="itensrelatorios" id="menurelatorios">
                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="consultar_pedido"><span class="material-symbols-outlined">add_shopping_cart</span>Mensalistas</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="consultar_orçamento"><span class="material-symbols-outlined">add_shopping_cart</span>Caixa</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="consultar_cliente"><span class="material-symbols-outlined">person_add</span>Financeiro</a></li>
                </ul>
            </li>

        </ul>
        <script src="~/js/menu.js"></script>
    </nav>



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>




    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
